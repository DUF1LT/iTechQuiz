<script type="text/javascript" id="rating-answer-option">
  Vue.component('rating-answer-option',
    {
      props: {
        question: Object,
        index: Number
      },
      methods: {
        rateStar: function (index) {
          this.question.answer.numeric = index;
        }
      },
      template: "#rating-answer-option-template"
    });
</script>
<script type="text/template" id="rating-answer-option-template">
  <i class="fa-star fa-lg" v-bind:class="{far: index > question.answer.numeric, fas: index <= question.answer.numeric}" v-on:click="rateStar(index)"></i>
</script>