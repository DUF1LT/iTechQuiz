@model Guid

<script type="text/javascript" id="survey-root">
  Vue.config.devtools = true;

  let sv = new Vue(
    {
      el: '#survey-vue',
      data: {
        survey: {},
        isSummaryTab: true
      },
      beforeCreate: function () {
        fetch('@Url.Action("GetSurveyWithAnswers", new { id = Model })',
          {
            headers: {
              'Accept': 'application/json'
            }
          }).then(response => response.json())
          .then(data => this.survey = JSON.parse(JSON.stringify(data)));
      },
      computed:
      {
        questionsAmount: function() {
          if (!this.survey.pages) {
            return null;
          } else {
            return this.survey.pages.reduce((count, page) => count + page.questions.length, 0);
          }
        },
        pagesAmount: function () {
          if (!this.survey.pages) {
            return null;
          } else {
            return this.survey.pages.length;
          }
        },
        answersAmount: function () {
          if (!this.survey.pages) {
            return null;
          } else {
            return this.survey.pages.reduce((count, page) => count + page.questions.reduce((count, question) => count + question.answers.length, 0), 0);
          }
        }
      },
      methods:
      {
        changePage: function (page) {
          this.survey.currentPage = this.survey.pages.indexOf(page);
        },
        openSummary: function() {
          this.isSummaryTab = true;
        },
        openSeparate: function() {
          this.isSummaryTab = false;
        }
      }
    });
</script>