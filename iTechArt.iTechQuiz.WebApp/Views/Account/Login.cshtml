@model iTechArt.iTechQuiz.WebApp.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="login-section">
    <form asp-controller="Account" asp-action="Login" method="post">
        <h2>Login to your account</h2>
        <div class="login-input-wrapper">
            <input asp-for="Login" class="form-control" placeholder="Login" />
            <span asp-validation-for="Login" class="login-input-validation"></span>
        </div>
        <div class="login-input-wrapper">
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="login-input-validation"></span>
        </div>
        @Html.ValidationMessage("WrongLoginOrPassword", new { @class = "login-input-validation-summary" })
        <button type="submit">Login</button>
    </form>
</section>

