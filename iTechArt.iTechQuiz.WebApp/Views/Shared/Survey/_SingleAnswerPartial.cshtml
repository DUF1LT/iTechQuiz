@model iTechArt.iTechQuiz.WebApp.ViewModels.Constructor.QuestionViewModel

@if (Model.IsEditable)
{
    <div class="new-survey-main__question__header">
        <div class="new-survey-main__question__title">
            <label>@Model.Number.</label>
            <input asp-for="@Model.Content">
        </div>
    </div>
    <div class="new-survey-main__question__answers">
        @for (int i = 0; i < Model.Options.Count; i++)
        {
            <div class="new-survey-main__question__option">
                <input type="radio" name="" />
                <input asp-for="@Model.Options[i]" class="new-survey-main__question__option__text-input">
            </div>
        }
    </div>
}
else
{
    <div class="new-survey-main__question__header">
        <div class="new-survey-main__question__title">
            <label>@Model.Number.</label>
            <label>@Model.Content</label>
        </div>
    </div>
    <div class="new-survey-main__question__answers">
        @for (int i = 0; i < Model.Options.Count; i++)
        {
            <div class="new-survey-main__question__option">
                <input asp-for="@Model.Options[i]" hidden />
                <input type="radio" name="" />
                <label class="new-survey-main__question__option__text-input">@Model.Options[i]</label>
            </div>
        }
    </div>
}
